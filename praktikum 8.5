body{
    background-color: red;
    padding: 0%;
    margin: 20px;
    text-align: center;
    font-weight: bold;
}
header, footer{
    background-color: salmon;
    height: 10vh;
    margin-bottom: 15px;
    margin-top: 15px;
}

#main{
    display: flex;
}

